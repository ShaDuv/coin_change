class Coin
  def initilization
    @coins = coins
  end

  def calculation(coins)

    @wallet = { :quarters =>  0,
      :dimes =>     0,
      :nickles =>   0,
      :pennies =>   0}
      @values = { :quarters =>  25,
                  :dimes =>     10,
                  :nickels =>   5,
                  :pennies =>   1}
        until coins == 0 do
          values.each do |type, value|
            wallet[type] = change/value
            change = change%value
          end
        end
      end
    end
    p @wallet
    coins = gets.to_i
    change = Coin.new()
